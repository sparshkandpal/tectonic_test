<%= content_for :title, "Your Cart" %>

<div class="cart-page-container">
  <div class="cart-page-header">
    <h1>Your Cart</h1>
    <%= link_to 'â† Back to Stories', stories_path, class: 'back-link' %>
  </div>

  <div class="cart-items-container" data-controller="cart">
    <% if @cart_items.any? %>
      <div class="cart-items-list">
        <% @cart_items.each do |cart_item| %>
          <div class="cart-item-card">
            <% if cart_item.dish.image.attached? %>
              <div class="cart-item-image">
                <%= image_tag cart_item.dish.image, alt: cart_item.dish.name %>
              </div>
            <% end %>
            <div class="cart-item-details">
              <h3><%= cart_item.dish.name %></h3>
              <p class="dish-description"><%= cart_item.dish.description %></p>
              
              <% if cart_item.customizations.present? %>
                <div class="customizations-section">
                  <h4>Customizations:</h4>
                  <ul class="customization-list">
                    <% cart_item.customizations.each do |ingredient_id, customization| %>
                      <% ingredient = Ingredient.find_by(id: ingredient_id) %>
                      <% if ingredient %>
                        <li class="customization-item">
                          <span class="ingredient-name"><%= ingredient.name %></span>
                          <span class="quantity">
                            Quantity: <%= customization['quantity'] %>
                            <% if customization['substitution_id'].present? %>
                              <% substitution = Substitution.find_by(id: customization['substitution_id']) %>
                              <% if substitution %>
                                <span class="substitution">(Substituted with <%= substitution.substitute_ingredient.name %>)</span>
                              <% end %>
                            <% end %>
                          </span>
                        </li>
                      <% end %>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="cart-item-footer">
                <div class="quantity-control">
                  <label>Quantity:</label>
                  <span class="quantity-value"><%= cart_item.quantity %></span>
                </div>
                <div class="price-section">
                  <span class="item-price"><%= number_to_currency(cart_item.total_price) %></span>
                  <% if cart_item.quantity > 1 %>
                    <span class="unit-price">(<%= number_to_currency(cart_item.total_price / cart_item.quantity) %> each)</span>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="cart-item-actions">
              <%= button_to 'Remove', cart_item_path(cart_item), method: :delete, 
                  class: 'remove-btn', 
                  data: { 
                    action: 'click->cart#removeFromCart',
                    cart_item_id_value: cart_item.id 
                  } %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="cart-summary">
        <div class="summary-row">
          <span>Subtotal:</span>
          <span><%= number_to_currency(@cart_items.sum(&:total_price)) %></span>
        </div>
        <div class="summary-row total">
          <span><strong>Total:</strong></span>
          <span><strong><%= number_to_currency(@cart_items.sum(&:total_price)) %></strong></span>
        </div>
        <div class="cart-actions">
          <%= button_to 'Clear Cart', clear_cart_items_path, method: :delete, 
              class: 'clear-cart-btn',
              data: { action: 'click->cart#clearCart' } %>
          <button class="checkout-btn">Proceed to Checkout</button>
        </div>
      </div>
    <% else %>
      <div class="empty-cart">
        <div class="empty-cart-icon">ðŸ›’</div>
        <h2>Your cart is empty</h2>
        <p>Add items from stories to see them here</p>
        <%= link_to 'Browse Stories', stories_path, class: 'browse-btn' %>
      </div>
    <% end %>
  </div>
</div>

